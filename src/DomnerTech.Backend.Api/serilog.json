{
  "Serilog": {
    "Using": [
      "Serilog.Sinks.Async",
      "Serilog.Sinks.Console",
      "Serilog.Sinks.File",
      "Serilog.Enrichers.Environment",
      "Serilog.Enrichers.Thread",
      "Serilog.Expressions",
      "Elastic.Apm.SerilogEnricher"
    ],
    "MinimumLevel": {
      "Default": "Debug",
      "Override": {
        "Microsoft": "Debug",
        "Elastic.Apm": "Error"
      }
    },
    "WriteTo": [
      {
        "Name": "Async",
        "Args": {
          "configure": [
            //{
            //  "Name": "File",
            //  "Args": {
            //    "path": "C:\\inetpub\\private\\logs\\base-project-template\\api-.log",
            //    "rollingInterval": "Day",
            //    "shared": true,
            //    "outputTemplate": "{Timestamp:HH:mm:ss.fff}|{Level:u3}|{MachineName}|{CorrelationId}|{SourceContext}|{Message:lj}|{Exception}{NewLine}"
            //  }
            //},
            {
              "Name": "Console",
              "Args": {
                "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff}|{Level:u3}|{MachineName}|{UserId}|{CorrelationId}|{SourceContext}|{Message:lj}|{Exception}{NewLine}"
              }
            }
          ]
        }
      }
    ],

    "Filter": [
      {
        "Name": "ByExcluding",
        "Args": {
          "expression": "StartsWith(SourceContext, 'Microsoft.AspNetCore.')"
        }
      },
      {
        "Name": "ByExcluding",
        "Args": {
          "expression": "StartsWith(SourceContext, 'Microsoft.Extensions.Http.')"
        }
      },
      {
        "Name": "ByExcluding",
        "Args": {
          "expression": "StartsWith(SourceContext, 'System.Net.Http.HttpClient.')"
        }
      },
      {
        "Name": "ByExcluding",
        "Args": {
          "expression": "StartsWith(SourceContext, 'Correlate.AspNetCore')"
        }
      },
      {
        "Name": "ByExcluding",
        "Args": {
          "expression": "StartsWith(SourceContext, 'AspNetCore.Authentication.ApiKey')"
        }
      },
      {
        "Name": "ByExcluding",
        "Args": {
          "expression": "StartsWith(SourceContext, 'Elastic.Apm')"
        }
      }
    ],
    "Enrich": [
      "FromLogContext",
      "WithMachineName",
      "WithThreadId",
      "WithEnvironmentName",
      "WithElasticApmCorrelationInfo"
    ],
    "Properties": {
      "TelegramTopic": "2",
      "service.name": "base-project",
      "service.environment": "DEV"
    }
  }
}